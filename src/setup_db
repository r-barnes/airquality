DROP TABLE stations;
CREATE TABLE stations (
	stationid CHARACTER(9),
	system    SMALLINT,
	name      VARCHAR(255),
	lat 			REAL,
	lon       REAL,
	elev      REAL,
  pt 				POINT,
  UNIQUE(stationid)
);

CREATE INDEX ptindx ON stations USING gist (pt);

GRANT ALL PRIVILEGES ON TABLE stations TO airq;


DROP TABLE zips;
CREATE TABLE zips (
	zip      CHARACTER(5),
	city     VARCHAR(255),
	state    CHAR(2)
	lat      FLOAT,
	lon      FLOAT,
	timezone INT,
	dst      INT,
  UNIQUE(zip)
);

GRANT ALL PRIVILEGES ON TABLE zips TO airq;